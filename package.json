{
  "name": "claude-code-metrics",
  "version": "1.0.0",
  "description": "Executable shimming tool for measuring claude-code command execution times",
  "main": "dist/shim-cli.js",
  "type": "module",
  "scripts": {
    "build": "bun build ./src/cli.ts --outdir dist --target node && bun build ./src/shim-cli.ts --outdir dist --target node && bun build ./src/metrics-collector.ts --outdir dist --target node && bun build ./src/auto-shim.ts --outdir dist --target node",
    "cli": "node --import tsx ./src/cli.ts",
    "shim": "node --import tsx ./src/shim-cli.ts",
    "bootstrap": "bash bootstrap.sh",
    "bootstrap:all": "bash bootstrap.sh --shim-all",
    "uninstall": "npm run shim uninstall",
    "lint": "biome check src/",
    "typecheck": "tsc --noEmit",
    "test": "bun test tests/",
    "test:integration": "bun test tests/integration.test.ts"
  },
  "bin": {
    "claude-code-metrics": "./dist/cli.js",
    "claude-code-shim": "./dist/shim-cli.js"
  },
  "keywords": [
    "claude-code",
    "metrics",
    "performance",
    "shimming",
    "executable",
    "monitoring"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^12.1.1",
    "commander": "^12.0.0",
    "tsx": "^4.20.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/better-sqlite3": "^7.6.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  }
}
